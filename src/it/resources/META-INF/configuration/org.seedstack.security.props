[org.seedstack]
jpa.units=accounts-unit
jdbc.datasources=datasource1
seed.transaction.default-handler=org.seedstack.jpa.internal.JpaTransactionHandler

[org.seedstack.jdbc.datasource.datasource1]
driver=org.hsqldb.jdbcDriver
url=jdbc:hsqldb:mem:testdb1
user=sa
password=

[org.seedstack.jpa.unit.accounts-unit]
datasource=datasource1
mapping-files=META-INF/base-user-orm.xml
property.hibernate.dialect=org.hibernate.dialect.HSQLDialect
property.hibernate.hbm2ddl.auto=create
property.sql.enforce_strict_size=true

[org.seedstack.seed.security]
realms=UserRealm

[org.seedstack.seed.security.roles]
admin=ADMIN

[org.seedstack.seed.security.permissions]
admin=management:items:delete

[org.seedstack.accounts.*]
default-repository=org.seedstack.jpa.Jpa
