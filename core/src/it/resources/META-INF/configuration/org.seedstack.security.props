[org.seedstack.seed]
core.data-initialization = none
persistence.jpa.units = seed-account-management-domain
persistence.jdbc.datasources = datasource1

transaction.manager = org.seedstack.seed.transaction.internal.LocalTransactionManager
transaction.default-handler = org.seedstack.seed.persistence.jpa.internal.JpaTransactionHandler

[org.seedstack.seed.persistence.jdbc.datasource.datasource1]
driver=org.hsqldb.jdbcDriver
url=jdbc:hsqldb:mem:testdb1
user=sa
password=

[org.seedstack.seed.persistence.jpa.unit.seed-account-management-domain.property]
javax.persistence.jdbc.driver=org.hsqldb.jdbcDriver
javax.persistence.jdbc.url=jdbc:hsqldb:mem:testdb
javax.persistence.jdbc.user=sa
javax.persistence.jdbc.password=
hibernate.dialect=org.hibernate.dialect.HSQLDialect
hibernate.hbm2ddl.auto=create
sql.enforce_strict_size=true

[org.seedstack.seed.security]
realms = DatabaseRealm
db.datasource = datasource1

[org.seedstack.seed.security.roles]
jedi = SEED.JEDI

[org.seedstack.seed.security.permissions]
jedi = lightSaber:*, academy:*
padawan = academy:learn
ghost = site:haunt
